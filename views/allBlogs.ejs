                        <% AllBlogs.forEach(blog=> { %>
                            <tr>
                                <td>
                                    <%= blog.title %>
                                </td>
                                <td>
                                    <p>
                                        <a class="edit-btn" href="/edit-blog/<%= blog.canonical %>">Edit</a>
                                    </p>
                                </td>
                                <td>
